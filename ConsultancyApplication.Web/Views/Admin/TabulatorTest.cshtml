@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Tabulator Test</title>
    <link href="https://unpkg.com/tabulator-tables@5.5.0/dist/css/tabulator.min.css" rel="stylesheet">
    <script src="https://unpkg.com/tabulator-tables@5.5.0/dist/js/tabulator.min.js"></script>
</head>
<body>
    <h2 style="text-align:center">🧪 Tabulator Test Sayfası</h2>
    <div id="test-table" style="margin: 30px;"></div>

    <script>
        window.addEventListener("load", function () {
            console.log("🚀 Sayfa yüklendi, Tabulator başlatılıyor...");
            const table = new Tabulator("#test-table", {
                data: [{ name: "Deneme Kullanıcı" }],
                layout: "fitColumns",
                columns: [
                    { title: "Ad", field: "name", editor: "input" }
                ],
                cellClick: function(e, cell) {
                    console.log("🖱️ Hücre tıklandı:", cell.getField(), cell.getValue());
                },
                cellEditingStopped: function(cell) {
                    console.log("✏️ Düzenleme bitti:", cell.getValue());
                },
                rowUpdated: function(row) {
                    console.log("🧩 Satır güncellendi:", row.getData());
                }
            });
        });
    </script>
</body>
</html>
